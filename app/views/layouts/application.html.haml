!!!
%html
  %head
    %link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous")
    %title Night On Night Off
    = stylesheet_link_tag 'application', 'media' => 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

    %body
      %div.container{:style => "width: 100%; position: relative;"}
        %img{:src => "/assets/bay-bridge-night.jpg", :style => "max-width: 100%; max-height: 100%; margin: auto; display: block; opacity: 85%;"}
        %div{:style => "position: absolute; top: 60%; left: 50%; transform: translate(-50%, -50%);"}
          %h1.title{:style => "color: white;"} Night On Night Off
        %div{:style => "position: absolute; top: 8px; right: 16px;"}
          - if current_user
            = link_to 'Log Out', destroy_user_session_path, :method => :delete
          - else
            = link_to 'Login', new_user_session_path

          = link_to 'Sign Up', new_user_registration_path

      %div.container
        #main
          - if flash[:notice]
            %div.alert.alert-danger
              #notice.message= flash[:notice]
          - elsif flash[:warning]
            %div.alert.alert-danger
              #warning.message= flash[:warning]

          = yield
